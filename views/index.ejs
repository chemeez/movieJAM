	  boxHover()
	  
	});

	//상단비쥬얼 nav위치값
	var owl = $('.owl-carousel');

	$(window).on('resize', function(){
		slideVisualNavPos();
	})
	
	function slideVisualNavPos(){
		var winWdh = $(window).outerWidth();
		if (owl.parents('#banner').length > 0 && owl.find('.owl-nav').length > 0){
			owl.find('.owl-nav ').css({'width' : winWdh, 'margin-left' : -winWdh / 2});
		}
	}

	function boxHover(){
		$('.box').on('mouseover', function(){
			$(this).children('.hover').css('display', 'block');
		});

		$('.box').on('mouseout', function(){
			$(this).children('.hover').css('display', 'none');
		});

		$('.hover a').on('mouseover', function(){
			$(this).css('background-color', '#fff').css('color','#000').css('font-weight','700');
		});

		$('.hover a').on('mouseout', function(){
			$(this).css('background-color', 'transparent').css('color','#fff');
		});
	}
	
  </script>
